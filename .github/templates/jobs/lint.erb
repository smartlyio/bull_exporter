lint:
  name: Lint
  runs-on: <%= ubuntu_version %>
  steps:
    @import ../smartlyio/steps/js/basic
    - name: Run Linting Tools
      run: yarn lint -f junit -o eslint.xml
    - name: Create an annotation of the build information
      uses: ashley-taylor/junit-report-annotations-action@9ac2f823854c677f30e062dfe779445e33e5d380
      if: ${{ always() }}
      with:
        access-token: ${{ secrets.GITHUB_TOKEN }}
        path: "eslint.xml"
        name: "Lint Results"
